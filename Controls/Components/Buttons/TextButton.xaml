<UserControl x:Class="Appear.Controls.Components.Buttons.TextButton" Name="TextButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel DataContext="{Binding ElementName=TextButtonControl}">
        <Button Style="{StaticResource ButtonDefault_Rect}" 
                Width="{Binding Size}" 
                Margin="3"
                Height="30"
                Click="OnClick"
                Content="{Binding Text}"
                HorizontalAlignment="Center">
        </Button>
    </StackPanel>
</UserControl>
