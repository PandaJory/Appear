<core:ObservableControl x:Class="Appear.Controls.Components.Buttons.CheckBoxButton" x:Name="CheckBoxButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Appear.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <DockPanel Margin="10,2" DataContext="{Binding ElementName=CheckBoxButtonControl}">
        <CheckBox Margin="0,0,10,0" DockPanel.Dock="Right" VerticalAlignment="Center" IsChecked="{Binding IsChecked}" Checked="HandleChecked" Unchecked="HandleUnchecked"></CheckBox>
        <TextBlock Text="{Binding Text}" FontFamily="Verdana" FontWeight="DemiBold" Padding="5,2"></TextBlock>
    </DockPanel>
</core:ObservableControl>
