<UserControl x:Class="Appear.Controls.Components.Image.ImagePresenter" Name="ImagePresenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Background="Black" DataContext="{Binding ElementName=ImagePresenterControl}">
        <Image 
            Source="{Binding Path}"
            Stretch="Uniform" 
            Height="{Binding ImageHeight}" 
            Width="{Binding ImageWidth}">
        </Image>
    </StackPanel>
</UserControl>
