<UserControl x:Class="Appear.Controls.Panels.MainView.FilterPanel" Name="FilterPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls.Panels.MainView"
             xmlns:butt="clr-namespace:Appear.Controls.Components.Buttons" 
             Width="150">
    <Border CornerRadius="20" Background="White" Margin="10,5">
        <StackPanel Margin="10" Orientation="Vertical" DataContext="{Binding ElementName=FilterPanelControl}">
            <butt:TextButton Size="100" Text="TAGS" Action="OpenFilters"></butt:TextButton>
            <butt:TextButton Size="100" Text="EXTENSION" Action="OpenFilters"></butt:TextButton>
        </StackPanel>
    </Border>
</UserControl>
